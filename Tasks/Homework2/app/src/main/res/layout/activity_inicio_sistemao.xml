<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioSistemaO">

    <Button
        android:id="@+id/btn_crear_nueva_distro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:backgroundTint="#47C624"
        android:text="Crear  Sistema Operativo"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lv_sistemaO_lista"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/lv_sistemaO_lista" />

    <ListView
        android:id="@+id/lv_sistemaO_lista"
        android:layout_width="320dp"
        android:layout_height="400dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_crear_nueva_distro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_lista_sistemaO"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_lista_sistemaO"
        android:layout_width="320dp"
        android:layout_height="86dp"
        android:layout_marginTop="70dp"
        android:text="Sistemas Operativos"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>