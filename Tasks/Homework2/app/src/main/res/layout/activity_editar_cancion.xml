<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarCancion">

    <TextView
        android:id="@+id/tv_EditarCancion"
        android:layout_width="326dp"
        android:layout_height="58dp"
        android:text="Editar Canción"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.364"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/tv_nombre_cancion_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nombre de la Canción"
        app:layout_constraintEnd_toEndOf="@+id/tv_EditarCancion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_EditarCancion"
        app:layout_constraintTop_toBottomOf="@+id/tv_EditarCancion" />

    <TextView
        android:id="@+id/tv_artista_cancion_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artista"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.268" />

    <TextView
        android:id="@+id/tv_duracion_cancion_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duración (min)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.422" />

    <TextView
        android:id="@+id/tv_genero_cancion_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Género"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.551" />

    <TextView
        android:id="@+id/tv_anioRelease_cancion_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Año de Lanzamiento"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.693" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtIn_nombreC_editar"
        android:layout_width="333dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_artista_cancion_editar"
        app:layout_constraintEnd_toEndOf="@+id/tv_nombre_cancion_editar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_nombre_cancion_editar"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre_cancion_editar"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtIn_artistaC_editar"
        android:layout_width="333dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_duracion_cancion_editar"
        app:layout_constraintEnd_toEndOf="@+id/tv_artista_cancion_editar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_artista_cancion_editar"
        app:layout_constraintTop_toBottomOf="@+id/tv_artista_cancion_editar"
        app:layout_constraintVertical_bias="0.03" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtIn_duracionC_editar"
        android:layout_width="333dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_genero_cancion_editar"
        app:layout_constraintEnd_toEndOf="@+id/tv_duracion_cancion_editar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_duracion_cancion_editar"
        app:layout_constraintTop_toBottomOf="@+id/tv_duracion_cancion_editar"
        app:layout_constraintVertical_bias="0.071" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtIn_generoC_editar"
        android:layout_width="333dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_anioRelease_cancion_editar"
        app:layout_constraintEnd_toEndOf="@+id/tv_genero_cancion_editar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_genero_cancion_editar"
        app:layout_constraintTop_toBottomOf="@+id/tv_genero_cancion_editar"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtIn_anioC_editar"
        android:layout_width="333dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_anioRelease_cancion_editar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_anioRelease_cancion_editar"
        app:layout_constraintTop_toBottomOf="@+id/tv_anioRelease_cancion_editar" />

    <Button
        android:id="@+id/btn_editar_cancion"
        android:layout_width="201dp"
        android:layout_height="43dp"
        android:backgroundTint="#023E8A"
        android:text="Guardar Cambios"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIn_anioC_editar"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_cancelar_cancion_editar"
        android:layout_width="115dp"
        android:layout_height="39dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#0077B6"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIn_anioC_editar"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>