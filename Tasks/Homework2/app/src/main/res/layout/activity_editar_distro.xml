<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarDistro">

    <TextView
        android:id="@+id/tv_EditarDistro"
        android:layout_width="343dp"
        android:layout_height="46dp"
        android:text="Editar Distro"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/tv_nombre_distro_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nombre de la Distro"
        app:layout_constraintEnd_toEndOf="@+id/tv_EditarDistro"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_EditarDistro"
        app:layout_constraintTop_toBottomOf="@+id/tv_EditarDistro" />

    <TextView
        android:id="@+id/tv_arqitectura_distro_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arquitectura"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.254" />

    <TextView
        android:id="@+id/tv_cores_Distro_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cores"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.394" />

    <TextView
        android:id="@+id/tv_fileManager_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File Manager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.536" />

    <TextView
        android:id="@+id/tv_anioRelease_cancion_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AÃ±o de Lanzamiento"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.674" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtIn_nombreDistro_editar"
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:hint="Xubutnu"
        app:layout_constraintBottom_toTopOf="@+id/tv_arqitectura_distro_editar"
        app:layout_constraintEnd_toEndOf="@+id/tv_nombre_distro_editar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_nombre_distro_editar"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre_distro_editar"
        app:layout_constraintVertical_bias="0.19" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtIn_arquitecturaDistro_editar"
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:hint="RISC"
        app:layout_constraintBottom_toTopOf="@+id/tv_cores_Distro_editar"
        app:layout_constraintEnd_toEndOf="@+id/tv_arqitectura_distro_editar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_arqitectura_distro_editar"
        app:layout_constraintTop_toBottomOf="@+id/tv_arqitectura_distro_editar"
        app:layout_constraintVertical_bias="0.142" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtIn_coresDistro_editar"
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:hint="16"
        app:layout_constraintBottom_toTopOf="@+id/tv_fileManager_editar"
        app:layout_constraintEnd_toEndOf="@+id/tv_cores_Distro_editar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_cores_Distro_editar"
        app:layout_constraintTop_toBottomOf="@+id/tv_cores_Distro_editar"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtIn_gestorFilesDistro_editar"
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:hint="Gnome"
        app:layout_constraintBottom_toTopOf="@+id/tv_anioRelease_cancion_editar"
        app:layout_constraintEnd_toEndOf="@+id/tv_fileManager_editar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_fileManager_editar"
        app:layout_constraintTop_toBottomOf="@+id/tv_fileManager_editar"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtIn_releaseDistro_editar"
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:hint="2023"
        app:layout_constraintEnd_toEndOf="@+id/tv_anioRelease_cancion_editar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_anioRelease_cancion_editar"
        app:layout_constraintTop_toBottomOf="@+id/tv_anioRelease_cancion_editar" />

    <Button
        android:id="@+id/btn_editar_distro"
        android:layout_width="201dp"
        android:layout_height="43dp"
        android:backgroundTint="#47C624"
        android:text="Guardar Cambios"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIn_releaseDistro_editar"
        app:layout_constraintVertical_bias="0.264" />

    <Button
        android:id="@+id/btn_cancelar_distro_editar"
        android:layout_width="115dp"
        android:layout_height="39dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#E80F28"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIn_releaseDistro_editar"
        app:layout_constraintVertical_bias="0.525" />

</androidx.constraintlayout.widget.ConstraintLayout>